  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Login",
      "request": "launch",
      "program": "${workspaceFolder}\\index.js",
      "args": ["login", "--email", "${input:email}"]
    },
    {
      "type": "node",
      "name": "Run Command",
      "request": "launch",
      "program": "${workspaceFolder}\\index.js",
      "args": ["${input:commandToRun}"]
    }
  ],
  "inputs": [
    {
      "id": "commandToRun",
      "type": "pickString",
      "description": "command to run",
      "options": ["watch", "config", "config-reset", "config-path"],
      "default": "watch"
    },
    {
      "id": "email",
      "type": "promptString",
      "description": "Email address",
      "default": ""
    }
  ]
}
